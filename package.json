{
  "name": "skill-search-cli",
  "version": "0.0.3",
  "description": "CLI tool for searching locally installed AI agent skills",
  "module": "src/main.ts",
  "type": "module",
  "bin": {
    "skill-search": "./src/main.ts"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "dev": "bun run src/main.ts",
    "build": "bun build --compile src/main.ts --outfile skill-search",
    "build:linux": "bun build --compile --target=bun-linux-x64 src/main.ts --outfile skill-search-linux-x64",
    "build:mac-arm": "bun build --compile --target=bun-darwin-arm64 src/main.ts --outfile skill-search-darwin-arm64",
    "build:mac-x64": "bun build --compile --target=bun-darwin-x64 src/main.ts --outfile skill-search-darwin-x64",
    "test": "bun test",
    "format": "bunx biome format --write src/",
    "lint": "bunx biome lint src/",
    "check": "bunx biome check src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Michaelliv/skill-search-cli.git"
  },
  "homepage": "https://github.com/Michaelliv/skill-search-cli#readme",
  "bugs": {
    "url": "https://github.com/Michaelliv/skill-search-cli/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "keywords": [
    "skills",
    "cli",
    "ai",
    "claude",
    "search",
    "agent",
    "documentation"
  ],
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^12.1.0",
    "gray-matter": "^4.0.3",
    "minisearch": "^7.1.0"
  }
}
